    <div class="container">
      <form class="form-signin" action="/challenges" method ="POST" >
        <h4>Challenge Name</h4>
        <div class="input-group">
          <input type="text" class="form-control" name="name" placeholder="i.e. Limit Starbucks this week." aria-describedby="basic-addon1" required autofocus>
        </div>
        <h4>Target Budget</h4>
        <div class="input-group">
          <span class="input-group-addon" id="basic-addon1">$</span>
          <input type="number" step="0.01" name="budget" class="form-control" placeholder="0.00" aria-describedby="basic-addon1" required>
        </div>
        <br>
        <button type="submit" class="btn btn-primary btn-lg">Challenge</button>
      </form>
    </div>
